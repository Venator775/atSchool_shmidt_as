<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="info">
    <Properties>
        <Property name="baseDir">target/logs</Property>
        <Property name="dateTimePattern">{yyyy_MM_dd (HH-mm-ss)}</Property>
        <Property name="datePattern">{yyyy_MM_dd}</Property>
        <Property name="messagePatternLayout1">%d{yyyy-mm-dd HH:mm:ss.SSS} [%t] %-5level %logger{3} - %msg%n</Property>
        <Property name="messagePatternLayout2">%d{yyyy-mm-dd HH:mm:ss.SSS} %p %c{1.} [%t] %m %ex%n</Property>
        <Property name="messagePatternLayout3">%d{HH:mm:ss.SSS} [%t] %-5level %logger{5} - %msg%n</Property>
        <Property name="messagePatternLayout4">%d %p %c{1.} [%t] %m%n</Property>
    </Properties>
    <Appenders>
        <Console name="logToConsole" target="SYSTEM_OUT">
            <PatternLayout pattern="${messagePatternLayout3}"/>
        </Console>
        <File name="logToFile" fileName="${baseDir}/logFile_API.log">
            <Append value="false"/>
            <PatternLayout>
                <Pattern>${messagePatternLayout2}</Pattern>
            </PatternLayout>
        </File>
        <RollingFile name="RollingFile" filePattern="${baseDir}/app-API-%d${dateTimePattern}-%i.log.gz">
            <PatternLayout>
                <Pattern>${messagePatternLayout4}</Pattern>
            </PatternLayout>
            <Policies>
                <CronTriggeringPolicy schedule="0 0 * * * ?"/>
                <SizeBasedTriggeringPolicy size="20 MB"/>
            </Policies>
            <DirectWriteRolloverStrategy maxFiles="10"/>
        </RollingFile>
        <JDBC name="databaseAppender" tableName="application_api_log">
            <DriverManager connectionString="jdbc:postgresql://localhost:5432/testprojectjdbc"
                           driverClassName="org.postgresql.Driver"
                           username="postgres"
                           password="123456"/>
            <Column name="event_time" isEventTimestamp="true"/>
            <Column name="level" pattern="%level" isUnicode="false"/>
            <Column name="logger" pattern="%logger{2}" isUnicode="false"/>
            <Column name="message" pattern="%message" isUnicode="false"/>
        </JDBC>
    </Appenders>

    <Loggers>
        <Logger name="Shmidt.DEBT.lesson14_3_allure_log4j.apiProj.MainApacheTest" level="all"
                additivity="false">
            <AppenderRef ref="logToConsole" level="info"/>
            <AppenderRef ref="logToFile"/>
            <AppenderRef ref="databaseAppender"/>
            <AppenderRef ref="RollingFile" level="error"/>
        </Logger>

        <Logger name="Shmidt.DEBT.lesson14_3_allure_log4j.apiProj.DummyJsonClientImpl" level="all"
                additivity="false">
            <AppenderRef ref="logToConsole" level="info"/>
            <AppenderRef ref="logToFile"/>
            <AppenderRef ref="databaseAppender"/>
            <AppenderRef ref="RollingFile" level="error"/>
        </Logger>

        <Logger name="lesson14_3_allure_log4j.apiProj.login.LoginChecks" level="all"
                additivity="false">
            <AppenderRef ref="logToConsole" level="info"/>
            <AppenderRef ref="logToFile"/>
            <AppenderRef ref="databaseAppender"/>
            <AppenderRef ref="RollingFile" level="error"/>
        </Logger>

        <Logger name="lesson14_3_allure_log4j.apiProj.user.UserChecks" level="all"
                additivity="false">
            <AppenderRef ref="logToConsole" level="info"/>
            <AppenderRef ref="logToFile"/>
            <AppenderRef ref="databaseAppender"/>
            <AppenderRef ref="RollingFile" level="error"/>
        </Logger>

        <Logger name="lesson14_3_allure_log4j.apiProj.response.ResponseChecks" level="trace"
                additivity="false">
            <AppenderRef ref="logToConsole" level="info"/>
            <AppenderRef ref="logToFile" level="all"/>
            <AppenderRef ref="databaseAppender" level="all"/>
            <AppenderRef ref="RollingFile" level="error"/>
        </Logger>

        <Root level="all">
            <AppenderRef ref="databaseAppender"/>
            <AppenderRef ref="logToFile" level="all"/>
        </Root>
    </Loggers>
</Configuration>
        <!-- Параметр конфигурации -Dlog4j.configurationFile=log4jConf_databaseProj.xml -Dlog4j.enableJndiJdbc=true-->
        <!--https://logging.apache.org/log4j/2.x/manual/appenders.html-->