<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="info">
    <Properties>
        <Property name="baseDir">logs</Property>
    </Properties>
    <Appenders>
        <Console name="logToConsole" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{5} - %msg%n"/>
        </Console>
        <File name="logToFile" fileName="${baseDir}/logFile.log">
            <Append value="false"/>
            <PatternLayout>
                <Pattern>%d %p %c{1.} [%t] %m %ex%n</Pattern>
            </PatternLayout>
        </File>
        <RollingFile name="RollingFile" filePattern="${baseDir}/app-%d{yyyy_MM_dd HH-mm-ss}-%i.log.gz">
            <PatternLayout>
                <Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
            </PatternLayout>
            <Policies>
                <CronTriggeringPolicy schedule="0 0 * * * ?"/>
                <SizeBasedTriggeringPolicy size="250 MB"/>
            </Policies>
            <DirectWriteRolloverStrategy maxFiles="10"/>
        </RollingFile>
        <JDBC name="databaseAppender" tableName="application_log">
            <ConnectionFactory class="Shmidt.DEBT.lesson14_3_allure_log4j.databaseProj.Connection.ConnectToDB"
                               method="InitDBConnection"/>
            <Column name="level" pattern="%level" isUnicode="false"/>
            <Column name="logger" pattern="%logger{5}" isUnicode="false"/>
            <Column name="message" pattern="%message" isUnicode="false"/>
            <Column name="exception" pattern="%exception" isUnicode="false"/>
            <Column name="date" isEventTimestamp="true"/>
        </JDBC>
    </Appenders>

    <Loggers>
        <Logger name="Shmidt1.DEBT.lesson14_3_allure_log4j.databaseProj.Movies.MovieRepositoryImpl" level="all"
                additivity="false">
            <AppenderRef ref="logToConsole"/>
        </Logger>

        <Root level="all">
            <AppenderRef ref="logToFile"/>
            <AppenderRef ref="logToConsole"/>
            <AppenderRef ref="RollingFile"/>
            <AppenderRef ref="databaseAppender"/>
        </Root>
    </Loggers>
</Configuration>

        <!--https://logging.apache.org/log4j/2.x/manual/appenders.html-->